{
  "expo": {
    "name": "GPS Amigo",
    "slug": "gps-amigo",
    "scheme": "gpsamigo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f59e0b"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.diego48.gpsamigo",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicaci칩n para saber cu치ndo llegas a tu destino",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Necesitamos tu ubicaci칩n en segundo plano para alertarte cuando llegues",
        "UIBackgroundModes": ["location", "fetch"]
      }
    },
    "android": {
      "package": "com.diego48.gpsamigo",
      "versionCode": 1,
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f59e0b"
      },
      "config": {
        "googleMaps": {
          "apiKey": "ACA EL API KEY"
        }
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "VIBRATE",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "gpsamigo"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que GPS Amigo acceda a tu ubicaci칩n siempre.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#f59e0b"
        }
      ],
      "expo-router"
    ],
    "extra": {
      "eas": {
        "projectId": "0f1270bd-fd78-49b7-8ae5-5d8c0cfa53c4"
      }
    },
    "owner": "diego48"
  }
}
